<h1>Problems#create</h1>
<p>Find me in app/views/problems/create.html.erb</p>

<%= form_for @problem, :html => {:multipart => true} do |f| %>
  <p>

  <label>Nombre</label>
  <%= f.text_field :name %>
  <br>
  <label>Descripción</label>
  <%= f.text_area(:description) %>
  <br>
  <label>Máxima fecha de envío</label>
  <%= f.date_select(:max_date) %>
  <br>
  <label>Solución</label>
  <%= f.file_field :solution %>
  <%= f.hidden_field :solution_cache %>
  <label>Error: <%= @problem.errors[:solution] %></label>
  <br>
  <label>Lenguage</label>
  <%= f.text_field :language %>
  <br>
  <label>Entrada</label>
  <%= f.file_field :input %>
  <%= f.hidden_field :input_cache %>
  <br>
  <%= f.submit("Subir") %>
  </p>
<% end %>