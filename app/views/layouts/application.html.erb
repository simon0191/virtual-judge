<!DOCTYPE html>
<html>
<head>
  <title>Juez Virtual Discant</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/navbar" %>

  <% if flash[:notice] %>
    <div class="container">
      <p class="alert alert-success"><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="container">
      <p class="alert alert-danger"><%= flash[:alert] %></p>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="container">
      <p class="alert alert-error"><%= flash[:error] %></p>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
